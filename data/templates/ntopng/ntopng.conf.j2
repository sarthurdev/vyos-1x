# Auto-generated by VyOS

-w={{ listen_address | bracketize_ipv6 }}:{{ port }}

{% if interface is vyos_defined %}
{%     for ifname in interface %}
-i={{ ifname }}
{%     endfor %}
{% endif %}

{% if local_network is vyos_defined %}
-m="{{ local_network | join(",") }}"
{% endif %}

{% if dns_mode is vyos_defined %}
{%     if dns_mode == 'none' %}
-n=3
{%     elif dns_mode == 'local' %}
-n=0
{%     elif dns_mode == 'all' %}
-n=1
{%     elif dns_mode == 'decode' %}
-n=2
{%     endif %}
{% endif %}

-X={{ max_flows }}
-x={{ max_hosts }}

